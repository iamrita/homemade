<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScheduleActivity"
    tools:showIn="@layout/activity_schedule">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Schedule Meal with Amrita"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="25dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="135dp"
        android:layout_height="139dp"
        app:srcCompat="@drawable/woman"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="90dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="338dp"
        android:layout_height="60dp"
        android:text="Indicate your availbility for the next 48 hours."
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="253dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="356dp"
        android:layout_height="46dp"
        android:text="Make sure to include all availibities to make it more likely that your schedules match. "
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="322dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="415dp" />
</android.support.constraint.ConstraintLayout>
