<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScheduleActivity"
    tools:showIn="@layout/activity_schedule">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="369dp"
        android:layout_height="547dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="53dp"
                android:layout_height="49dp"
                android:layout_marginBottom="5dp"
                android:background="#0000"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Schedule Meal with Amrita"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="28dp"
                tools:layout_editor_absoluteX="23dp"
                tools:layout_editor_absoluteY="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="140dp"
                android:layout_height="139dp"
                android:layout_marginLeft="45dp"
                app:srcCompat="@drawable/woman3"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="90dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="125dp"
                android:layout_height="136dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/indian_woman"
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="66dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Indicate your availability for the next 48 hours."
            android:textAlignment="center"
            android:textColor="#e8812f"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="347dp"
            android:layout_height="49dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Make sure to include all availibities to make it more likely that your schedules match."
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Availibilities:"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_start"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:entries="@array/start_dates_array"
                android:fontFamily="sans-serif-condensed"
                android:prompt="@string/start_date" />

            <Spinner
                android:id="@+id/spinner_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/end_dates_array"
                android:fontFamily="sans-serif-condensed"
                android:prompt="@string/end_date" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_start3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/start_dates_array"
                android:fontFamily="sans-serif-condensed"
                android:prompt="@string/start_date" />

            <Spinner
                android:id="@+id/spinner_end2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/end_dates_array"
                android:fontFamily="sans-serif-condensed"
                android:prompt="@string/end_date" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_start4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/start_dates_array"
                android:fontFamily="sans-serif-condensed"
                android:prompt="@string/start_date" />

            <Spinner
                android:id="@+id/spinner_end3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/end_dates_array"
                android:fontFamily="sans-serif-condensed"
                android:prompt="@string/end_date" />

        </LinearLayout>

        <Button
            android:id="@+id/send_availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ba284c"
            android:fontFamily="sans-serif-condensed"
            android:text="Send Availability"
            android:textSize="15dp"
            android:textColor="#ffffff" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
