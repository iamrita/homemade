<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ingredients2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/curry"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            app:srcCompat="@drawable/chickentikkamasala" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/curry"
            android:layout_alignBottom="@id/curry"
            android:layout_marginBottom="0dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Chicken Curry"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/back_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/back" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/curry"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Ingredients"
                android:textColor="@android:color/black"
                android:layout_marginBottom="3dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="- 3 tbsp of olive oil"
                android:layout_marginBottom="3dp"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="- 1 small onion"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginBottom="3dp"
                tools:layout_editor_absoluteY="318dp" />

            <TextView
                android:id="@+id/textView64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="- 2 cloves of garlic"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginBottom="3dp"
                tools:layout_editor_absoluteY="337dp" />

            <TextView
                android:id="@+id/textView70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginBottom="3dp"
                android:text="- 3 tbsp of curry powder" />

            <TextView
                android:id="@+id/textView65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="- 2 chicken breasts"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginBottom="3dp"
                tools:layout_editor_absoluteY="356dp" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="- 1 cup plain yogurt"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginBottom="3dp"
                tools:layout_editor_absoluteY="375dp" />

            <TextView
                android:id="@+id/textView67"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="- 1 bay leaf"
                android:layout_marginBottom="3dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="394dp" />

            <TextView
                android:id="@+id/textView68"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="- 3/4 cup of coconut milk"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginBottom="3dp"
                tools:layout_editor_absoluteY="413dp" />

            <TextView
                android:id="@+id/textView69"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="- 1/2 lemon, juiced"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginBottom="3dp"
                tools:layout_editor_absoluteY="432dp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="33dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/send_availability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ba284c"
                android:fontFamily="sans-serif-condensed"
                android:text="Export Ingredients List"
                android:textColor="#ffffff"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>