<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DishSelectionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="7dp"
            android:background="#0000"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView77"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Select Dish"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="9dp">

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Sweets" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Naan" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Chicken Curry" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView74"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="89dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Selection:"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="241dp"
            android:layout_height="96dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="105dp"
            android:layout_toEndOf="@+id/imageView28"
            android:background="#ba284c"
            android:fontFamily="sans-serif-condensed"
            android:text="Chicken Curry Ingredients"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button6"
            android:layout_width="241dp"
            android:layout_height="96dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="201dp"
            android:layout_toEndOf="@+id/imageView28"
            android:background="#e8812f"
            android:fontFamily="sans-serif-condensed"
            android:text="Naan Ingredients"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button8"
            android:layout_width="241dp"
            android:layout_height="96dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="293dp"
            android:layout_toEndOf="@+id/imageView28"
            android:background="#941d68"
            android:fontFamily="sans-serif-condensed"
            android:text="Sweets Ingredients"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="143dp"
            android:layout_height="122dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-42dp"
            android:layout_marginBottom="120dp"
            android:layout_toEndOf="@+id/imageButton10"
            app:srcCompat="@drawable/gulabjamun" />

        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="150dp"
            android:layout_height="103dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="195dp"
            app:srcCompat="@drawable/naan" />

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="143dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="73dp"
            android:fontFamily="sans-serif-condensed"
            app:srcCompat="@drawable/chickentikkamasala" />

        <TextView
            android:id="@+id/textView80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="53dp"
            android:text="Base your decision on personal preference and availability of ingredients. " />

        <TextView
            android:id="@+id/textView82"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="57dp"
            android:text="You must purchase the ingredients."
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="500dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:background="@color/green"
            android:fontFamily="sans-serif-condensed"
            android:text="Send Confirmation"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>