<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="384dp"
        android:layout_height="507dp"
        android:gravity="top"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="10dp">

        <LinearLayout
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="252dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

            </LinearLayout>

            <ImageView
                android:id="@+id/plane"
                android:layout_width="13dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginRight="3dp"
                android:src="@drawable/plane_orange" />

            <Switch
                android:id="@+id/toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:checked="true"
                android:theme="@style/SwitchColors"
                android:gravity="end" />

            <ImageView
                android:id="@+id/house"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="end"
                android:src="@drawable/house_orange" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="1dp">
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/locationGray"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:cropToPadding="false"
                    android:gravity="bottom"
                    android:src="@drawable/location_nofill_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/textSearchBar"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Search by origin of traveler"
                    android:textColor="#6c6969"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="463dp"
            android:layout_marginTop="9dp"
            android:stretchColumns="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sample_text">


            <TableRow>

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/indian_woman" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10dip"
                    android:text="Amrita V. \nJodhpur, India"
                    android:textColor="#000"
                    android:textSize="18dp" />

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/woman" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="15dp"
                    android:text="Leeya M.\nCairo, Egypt"
                    android:textColor="#000"
                    android:textSize="18dp" />

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/man3" />

                <TextView
                    android:layout_column="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="15dip"
                    android:text="Bo A. \nChengdu, China"
                    android:textColor="#000"
                    android:textSize="18dp" />

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/man" />

                <TextView
                    android:layout_column="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="15dip"
                    android:text="John P. \nCork, Ireland"
                    android:textColor="#000"
                    android:textSize="18dp" />

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/man2" />

                <TextView
                    android:layout_column="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="15dip"
                    android:text="Anh H. \nHanoi, Vietnam"
                    android:textColor="#000"
                    android:textSize="18dp" />

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/mexa" />

                <TextView
                    android:layout_column="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="15dip"
                    android:text="Juan F. \nGuadalajara, Mexico"
                    android:textColor="#000"
                    android:textSize="18dp" />

            </TableRow>

        </TableLayout>


        <!--<ListView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="383dp"
        android:layout_height="56dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#fff"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewExplorePink"
                android:layout_width="96dp"
                android:layout_height="36dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                app:srcCompat="@drawable/explore_pink" />

            <TextView
                android:id="@+id/textViewExplore"
                android:layout_width="96dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="Explore"
                android:textColor="#BB284C"
                android:textSize="10dp"
                android:fontFamily="sans-serif-condensed"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="492dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewFavorites"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:srcCompat="@drawable/heart"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="453dp" />

            <TextView
                android:id="@+id/textViewFavorites"
                android:layout_width="96dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="Favorites"
                android:textColor="#000"
                android:textSize="10dp"
                android:fontFamily="sans-serif-condensed"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="492dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewMeals"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:srcCompat="@drawable/meals"
                tools:layout_editor_absoluteX="214dp"
                tools:layout_editor_absoluteY="453dp" />

            <TextView
                android:id="@+id/textViewMeals"
                android:layout_width="96dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="Meals"
                android:textColor="#000"
                android:textSize="10dp"
                android:fontFamily="sans-serif-condensed"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="492dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:srcCompat="@drawable/profile"
                tools:layout_editor_absoluteX="312dp"
                tools:layout_editor_absoluteY="455dp" />

            <TextView
                android:id="@+id/textViewProfile"
                android:layout_width="96dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="Profile"
                android:textColor="#000"
                android:textSize="10dp"
                android:fontFamily="sans-serif-condensed"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="492dp" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>